{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2020",
    "declaration": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "lib": ["ES2021", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "rootDir": ".",
    "downlevelIteration": true
  },
  "include": ["**/*.ts"]
}
